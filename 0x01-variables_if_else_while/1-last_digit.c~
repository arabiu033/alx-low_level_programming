#include <stdlib.h>
#include <stdio.h>
#include <string.h>
#include <time.h>
/* more headers goes there */

/**
 * main - Starting point
 *
 * Return: 0 success
 */
int main(void)
{
	int n;

	srand(time(0));
	n = rand() - RAND_MAX / 2;
	/* your code goes there */
	char str[20];
	int length;

	sprintf(str, "%d", n);
	length = strlen(str);

	if (str[length - 1] > 5)
		printf("Last digit of %d is %c and is greater than 5\n",
		       n, str[length - 1]);
	else if (str[length - 1] == 0)
		printf("Last digit of %d is %c and is 0\n",
		       n, str[length - 1]);
	else
		printf("Last digit of %d is %c and is less than 6 and not 0",
		       n, str[length - 1]);
	return (0);
}
